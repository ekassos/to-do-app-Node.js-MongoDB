<div class="card card-body">
        {{#if message}}
            <div class="alert {{messageClass}}" role="alert">
                {{message}}
            </div>
        {{/if}}
  <h3>Create a new to-do item</h3>
  <form action="/todo" method="post">
    <div class="form-group">
      <label for="title">Title</label>
      <input class="form-control" name="title" type="text" placeholder="What are we tackling today?" required>
    </div>
    <div class="form-group">
      <label for="description">Description</label>
      <textarea class="form-control" name="description" placeholder="Enter any detailed information here." required></textarea>
    </div>
    <button type="submit" class="btn btn-dark">Submit</button>
  </form>
</div>